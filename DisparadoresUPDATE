
-- DISPARADOR DE TIPO BEFORE EN UPDATE 

CREATE TABLE  TRABAJADOR(ID INTEGER,NOMBRE VARCHAR2(120),SUELDO FLOAT);

INSERT INTO TRABAJADOR VALUES(1,'ANA',400);

 ---CREAR UN DISPARADOR QUE AL HACER EL UPDATE EL SUELDO AUTOMATICAMENTE SUME EL SALDO QUE TENIA AL NUEVO DEPOSITO
 
 CREATE OR replace trigger ACTUALIZAR_TRABAJADOR before update on TRABAJADOR 
 FOR each row
 begin
 :NEW.SUELDO := OLD.SUELDO + :NEW.SUELDO;
 END;
 /
 
 update TRABAJADOR  SET sueldo= 400 WHERE  ID=1;
 
 SELECT * FROM TRABAJADOR;
